#ifndef A_H_
#define A_H_
#include <iostream>                                                             

class Tdate{
public:
  void Set(int,int,int);
  int IsLeapYear();
  void Print();
private:
  int month;
  int day;
  int year;
};

#endif 

#include <iostream>      
#include "a.h"                                                              
using namespace std;

void Tdate::Set(int m,int d,int y)
{
  month=m;  day=d;  year=y; 
}

int Tdate::IsLeapYear()
{
  return (year%4==0&&year%100!=0)||(year%400==0);
}

void Tdate::Print()
{
   cout <<month <<"/" <<day <<"/" <<year <<endl;
}



	int
main ( int argc, char *argv[] )
{
    Tdate s;
    s.Set(2,15,1988);
    s.Print();
	cout	<< "\nProgram " << argv[0] << endl << endl;

	return EXIT_SUCCESS;
}		// ----------  end of function main  ---------- 

